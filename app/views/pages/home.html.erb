<h1 class="ui center aligned icon header ">
  <i class="circular chat icon purple "></i>
  Say Something
</h1>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id="messages-feed">
                <div class="ui feed" id="chat-feed">
                    <h4 class="ui header" >Chat Feed</h4>
                    <%  @messages.each {|message| %>
                        <%= render message %>
                    <% } %>
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, html: {class:"ui reply form", role:"form"}, url: message_path, data: {turbolinks: false}) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body, placeholder: "Enter a message..." %>
                            <%= f.button '<i class="bordered inverted purple edit icon"></i>'.html_safe %>
                            
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui secondary vertical pointing menu ">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>  
            </div>  
        </div>  
    </div>
</div>