<% if object.errors.any? %>
    <div class="ui error message">
        <i class="close icon"></i>
        <div class="header">
            The following errors prevented the <%= object.class.name.downcase %> from being saved
        </div>
        <ul class="list">
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>  