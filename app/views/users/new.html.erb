<h3 class="ui center aligned header">
  Welcome to Chatify - a demo of using sockets by Abner del Cid
</h3>
<h2 class="ui center aligned icon header">
  <i class="circular user plus purple icon"></i>
</h2>


<%= render "layouts/errors", object: @user  %>
<div class="ui placeholder segment">
    <div class="ui column ">
        <div class="column">
            <div class="ui form">
                
                <%= form_for @user,url: users_new_path,class:"ui form", local: true, data: { turbo: false, turbo_method: :post} do |f| %>
                    <div class="field">
                    <label>Username</label>
                    <div class="ui left icon input">
                    <%= f.text_field :username, class:"form-control shadow", placeholder:"Type your username" %>
                        <i class="user icon"></i>
                    </div>
                    </div>
                    <div class="field">
                    <label>Password</label>
                    <div class="ui left icon input">
                    <%= f.password_field :password, class:"form-control shadow", placeholder:"Type your password" %>
                        <i class="lock icon"></i>
                    </div>
                    </div>
                    <%= f.submit "Sign Up", class: "ui purple submit button" %>
                <% end %>
            </div>
        </div>
    </div>
</div>